
@{
    ViewBag.Title = "Search";
}

<h2>Search</h2>

<div style="position:relative">
    <div class="container text-black">
        <div class="row">
            <section id="schedules" class="mt-5">
                <div class="container-lg">
                    <div class="text-center">
                        <h2>Search Results</h2>

                    </div>
                </div>
            </section>
            <div class="row my-5 align-items-center justify-content-center">
                <div class="col-10">
                    <div class="card border-0">
                        <div class="card-body text-center py-4">
                            Cinemas
                        </div>
                        <div class="card-body">
                            @foreach (var cinema in ViewBag.filteredCinemas)
                            {
                                <a href="~/Venue/Bookings/@cinema.CinemaID" style="text-decoration:none;">
                                    <div class="row align-items-center justify-content-end">

                                        <div class="col-lg-4 m-lg-4 justify-content-end">
                                            <img class="rounded-3 float-end" style="height:200px; width:200px;" src="@cinema.Logo" />
                                        </div>

                                        <div class="col text-start">
                                            <div>
                                                <h2 class="display-6 mb-5 text-black">@cinema.Name</h2>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            }
                        </div>
                        <div class="card-body text-center py-4">
                            Movies
                        </div>
                        <div class="card-body">
                            @foreach (var movie in ViewBag.filteredMovies)
                            {
                                <a href="~/Home/Detail/@movie.MovieID" style="text-decoration:none;">
                                    <div class="row align-items-center justify-content-end">

                                        <div class="col-lg-4 m-lg-4 justify-content-end">
                                            <img class="rounded-3 float-end" style="height:300px; width:200px;" src="@movie.ImageURL" />
                                        </div>

                                        <div class="col text-start">
                                            <div>
                                                <h2 class="display-6 mb-5 text-black" style="text-decoration:none;">@movie.Name</h2>
                                            </div>
                                        </div>
                                        <hr />
                                    </div>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


